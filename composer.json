{
    "config": {
        "vendor-dir": "src/lib/vendor"
    },
    "require": {
        "mongodb/mongodb": "1.1.2",
        "mikecao/flight": "1.3.3",
        "katzgrau/klogger": "^1.2",
        "phpseclib/phpseclib": "^2.0",
        "swiftmailer/swiftmailer": "^5.4",
        "catfan/Medoo": "^1.1",
        "hassankhan/config": "^0.10.0",
        "elasticsearch/elasticsearch":"^2.0",
        "nategood/commando": "^0.2.9",
        "league/climate": "^3.2",
        "purekid/mongodm": "^1.5",
        "czproject/git-php": "*",
        "hoa/regex": "^1.0",
        "predis/predis": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "friendsofphp/php-cs-fixer": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "common\\": "src/lib/common",
            "dao\\": "src/lib/dao",
            "logic\\": "src/lib/logic",
            "model\\": "src/lib/model",
            "sdk\\": "src/lib/sdk",
            "library\\": "src/lib/library",
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {"tests\\": "tests/"}
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "scripts": {
        "format": [
            "php-cs-fixer fix --config=.php_cs.dist -v --using-cache=no"
        ]
    }
}
